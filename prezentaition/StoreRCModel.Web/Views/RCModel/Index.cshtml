@model StoreRCModels.RCModel

@{
    ViewData["Title"] = Model.nameRCModel;
}

<h1>@Model.nameRCModel</h1>
<p><strong>@Model.typeRCModel</strong></p>
<p>@Model.description</p>
<p>Цена <strong>@Model.price</strong></p>
<form action="@Url.Action("AddItem","Order")" method="post">
    <input type="hidden" name="id" value="@Model.numberRCModel"/>
    <button class="btn btn-success" type="submit">В корзину</button>
</form>

